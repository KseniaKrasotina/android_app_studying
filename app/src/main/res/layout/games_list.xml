<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="HomeViewModel"
            type="com.example.twitch_test.ui.home.HomeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/gameTitleTV"
        tools:text="Game title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text=""
        android:paddingTop="16dp"/>

    <ImageView
        android:id="@+id/gamePictureIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/channelsNumberTV"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        tools:text="Channels number"
        android:paddingTop="4dp"
        android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/spectatorsNumberTV"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            tools:text="Spectators number"
            android:paddingTop="4dp"
            android:paddingBottom="16dp"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F2F2F2"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"/>

</LinearLayout>


</layout>